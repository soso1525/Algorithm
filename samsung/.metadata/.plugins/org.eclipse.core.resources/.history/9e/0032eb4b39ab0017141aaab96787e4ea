package bitprint;

public class Main {
	public static void printBit(int n) {
		StringBuilder sb = new StringBuilder();

		for (int i = 7; i >= 0; i++) {
			if ((int) Math.pow(2, i) <= n)
				sb.append(1);
			else
				sb.append(0);
			
			n %= (int)Math.pow(2,i);
		}
	}

	public static void main(String[] args) {
	}

}
